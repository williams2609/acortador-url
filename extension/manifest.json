{
    "manifest_version": 3,
    "name": "URLify - Acortador de URLs",
    "version": "1.0",
    "description": "Acorta y gestiona tus URLs desde esta extensi√≥n.",
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon-48.png"
    },
    "permissions": ["storage", "activeTab", "tabs"],
    "host_permissions": [
      "*://localhost/*",
      "*://your-backend-domain/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }